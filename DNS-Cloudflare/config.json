{
	"name": "DNS-Cloudflare",
	"version": "1.0",
	"slug": "DNS-Cloudflare",
	"description": "Custom Domain with Cloudflare DNS hosting and DDNS",
	"url": "https://github.com/zpeed260/hassio-addons/",
	"arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
	"startup": "services",
	"boot": "auto",
	"map": ["ssl:rw"],
	"options": {
		"cfapikey": "CloudFlare API Key",
		"cfemail": "CloudFlare Email",
		"domains": ["sub.example.com"],
		"seconds": 300
	},
	"schema": {
		"cfapikey": "str",
		"cfemail": "email",
		"domains": ["str"],
		"seconds": "int"
	}
}
